<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name></display-name>	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>DateServlet</servlet-name>
    <servlet-class>cn.pad.servlet.DateServlet</servlet-class>
  </servlet>

    <servlet>
        <servlet-name>PlayClassServlet</servlet-name>
        <servlet-class>cn.pad.servlet.PlayClassServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PlayClassServlet</servlet-name>
        <url-pattern>/PlayClassServlet</url-pattern>
    </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DateServlet</servlet-name>
    <url-pattern>/DateServlet</url-pattern>
  </servlet-mapping>
  <resource-ref>
  	<description>shinho DataSource</description>
  	<res-ref-name>jdbc/shinho</res-ref-name>
  	<res-type>javax.sql.DataSource</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
</web-app>
